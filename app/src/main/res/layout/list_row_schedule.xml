<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageViewFotoSchedule"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Nama Band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNamaBandS"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStage"
        android:textSize="14sp"
        android:layout_below="@+id/textViewNamaBandS"
        android:layout_alignLeft="@+id/textViewNamaBandS"
        android:layout_alignStart="@+id/textViewNamaBandS" />

    <TextView
        android:text="Jadwal Manggung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewJadwal"
        android:layout_below="@+id/textViewStage"
        android:layout_alignLeft="@+id/textViewStage"
        android:layout_alignStart="@+id/textViewStage"
        android:layout_marginTop="11dp" />
</RelativeLayout>