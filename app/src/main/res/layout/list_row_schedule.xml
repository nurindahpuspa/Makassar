<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageViewFotoSchedule"
        android:paddingLeft="11dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStage"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textViewNamaBandS"
        android:layout_toRightOf="@+id/imageViewFotoSchedule"
        android:layout_toEndOf="@+id/imageViewFotoSchedule"
        android:textColor="@color/white"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Jadwal Manggung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewJadwal"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/my_border"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textViewStage"
        android:layout_toRightOf="@+id/imageViewFotoSchedule"
        android:layout_toEndOf="@+id/imageViewFotoSchedule"
         />

    <TextView
        android:text="Nama Band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNamaBandS"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:layout_marginTop="22dp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewFotoSchedule"
        android:layout_toEndOf="@+id/imageViewFotoSchedule" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_below="@+id/imageViewFotoSchedule" />

</RelativeLayout>